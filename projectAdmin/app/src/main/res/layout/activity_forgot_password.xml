<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/goToLoginFromReset"
            android:layout_width="53dp"
            android:layout_height="38dp"
            android:backgroundTint="#000000"
            app:srcCompat="@drawable/back_button" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-40dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/raleway"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-256dp"
            android:layout_marginTop="-22dp"
            android:layout_weight="1"
            android:fontFamily="@font/raleway"
            android:text="Go Back"
            android:textColor="@color/white" />
    </LinearLayout>

    <EditText
        android:id="@+id/enter_email_edittext_forgot"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/very_small_roundness"
        android:backgroundTint="@color/white"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="#757373" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/new_password_edittext_forgot"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/very_small_roundness"
        android:backgroundTint="@color/white"
        android:hint="Enter new password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:paddingEnd="50dp"
        android:textColor="@color/black"
        android:textColorHint="#757373" />

    <ImageView
        android:id="@+id/passwordVisibilityToggle"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:layout_marginTop="-35dp"
        android:layout_marginEnd="60dp"
        app:srcCompat="@drawable/visibility_off" />

    <Button
        android:id="@+id/reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="25dp"
        android:text="Reset Password" />

    <TextView
        android:id="@+id/problemPrompt"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="If you haven't already registered into the app, be sure that you do so using your designated Employee ID. If you encounter any problems regarding authentication it is advised that you contact your immediate supervisor."
        android:textColor="#FF0202" />

    <Button
        android:id="@+id/resetToReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:text="Admin Registration" />
</LinearLayout>
