<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:padding="0dp">


    <androidx.cardview.widget.CardView
        android:layout_width="367dp"
        android:layout_height="288dp"
        android:maxHeight="458dp"
        android:minHeight="300dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/new_username"
            android:layout_width="277dp"
            android:layout_height="50dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_feedback_card"
            android:ems="10"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:maxHeight="50dp"
            android:minHeight="50dp"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#838080" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="240dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/closeBtn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/feedback_ripple"
                android:text="Close"
                android:textColor="#EF0466"
                app:cornerRadius="0dp"
                app:rippleColor="#938F8F" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="2dp"
                android:layout_height="45dp"
                android:layout_weight="0"
                android:background="#EDEBEB">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/change_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/feedback_ripple"
                android:text="save"
                android:textColor="#EF0466"
                app:cornerRadius="0dp"
                app:rippleColor="#938F8F" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="239dp"
            android:background="#EDEBEB">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="257dp"
            android:layout_height="31dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:text="Please make sure your new username is at most 15 characters long."
            android:textColor="#555353"
            android:textSize="11sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="30dp"
            android:text="Change Username"
            android:textColor="#EF0466"
            android:textSize="30sp" />


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>