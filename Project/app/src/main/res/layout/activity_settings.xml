<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    tools:context=".settingsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/unscrollableHeader"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:background="#000000"
        android:backgroundTint="#000000">

        <TextView
            android:id="@+id/user_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="76dp"
            android:text="Loading..."
            android:textColor="#FDFCFC"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="#F8F8F8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.994">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/goToMainFromSetting"
            android:layout_width="55dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="112dp"
            android:backgroundTint="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_button" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="196dp"
            android:layout_height="46dp"
            android:layout_marginStart="10dp"
            android:text="Settings"
            android:textColor="#FBFAFA"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.341"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.848" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="316dp"
        android:layout_height="331dp"
        android:background="@drawable/settings_trans_panel"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unscrollableHeader"
        app:layout_constraintVertical_bias="0.153">


        <ImageButton
            android:id="@+id/about_app"
            android:layout_width="276dp"
            android:layout_height="60dp"
            android:background="@drawable/button_bg_setting"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="on"
            android:paddingLeft="-200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feedback"
            app:layout_constraintVertical_bias="0.137"
            app:rippleColor="#D3CFCF"
            app:srcCompat="@drawable/about_us" />

        <ImageButton
            android:id="@+id/feedback"
            android:layout_width="276dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_bg_setting"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingLeft="-200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_username"
            app:rippleColor="#D3CFCF"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/feedbackTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="-10dp"
            android:text="Send Feedback"
            android:textColor="#FAF6F6"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/feedback"
            app:layout_constraintEnd_toEndOf="@+id/feedback"
            app:layout_constraintHorizontal_bias="0.684"
            app:layout_constraintStart_toStartOf="@+id/feedback"
            app:layout_constraintTop_toTopOf="@+id/feedback"
            app:layout_constraintVertical_bias="0.552" />


        <ImageButton
            android:id="@+id/logout"
            android:layout_width="276dp"
            android:layout_height="60dp"
            android:background="@drawable/button_bg_setting"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="on"
            android:paddingLeft="-200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about_app"
            app:rippleColor="#D3CFCF"
            app:srcCompat="@drawable/logout_door" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:text="Logout"
            android:textColor="#FAF6F6"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/logout"
            app:layout_constraintEnd_toEndOf="@+id/logout"
            app:layout_constraintHorizontal_bias="0.372"
            app:layout_constraintStart_toStartOf="@+id/logout"
            app:layout_constraintTop_toTopOf="@+id/logout"
            app:layout_constraintVertical_bias="0.464" />


        <ImageButton
            android:id="@+id/change_username"
            android:layout_width="276dp"
            android:layout_height="60dp"
            android:background="@drawable/button_bg_setting"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="on"
            android:paddingLeft="-190dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#D3CFCF"
            app:srcCompat="@drawable/change_username" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-5dp"
            android:text="Change Username"
            android:textColor="#F4F1F1"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/change_username"
            app:layout_constraintEnd_toEndOf="@+id/change_username"
            app:layout_constraintStart_toStartOf="@+id/change_username"
            app:layout_constraintTop_toTopOf="@+id/change_username" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-30dp"
            android:text="About the App "
            android:textColor="#FDFCFC"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/about_app"
            app:layout_constraintEnd_toEndOf="@+id/about_app"
            app:layout_constraintStart_toStartOf="@+id/about_app"
            app:layout_constraintTop_toTopOf="@+id/about_app" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>